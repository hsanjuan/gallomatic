!!! 5
%html
  %head
    %title
      = "#{@cfg[:title]} - #{@cfg[:subtitle]}"
    %meta{ :content => @cfg[:description], :name => "description" }
    %meta{ :content => @cfg[:author], :name => "author" }
    %meta{ :content => @cfg[:keywords], :name => "keywords" }
    %meta{ :charset => "UTF-8" }
    %link{ :href => "css/font-awesome.css", :media => "screen", :rel => "stylesheet" }
    %link{ :href => "css/gallomatic.css", :media => "screen", :rel => "stylesheet" }
    %script{ :type => "text/javascript", :src => "js/jquery-1.8.0.min.js" }
    %script{ :type => "text/javascript", :src => "js/jquery.lazyload.min.js" }
    %script{ :type => "text/javascript", :src => "js/gallomatic.js" }
  %body

    = haml :index